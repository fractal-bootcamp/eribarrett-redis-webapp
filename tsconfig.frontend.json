{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ES2015",
        "outDir": "./public/js",
        "rootDir": "./src/frontend",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "es2018",
            "dom.iterable"
        ],
        "sourceMap": true
    },
    "include": [
        "src/frontend/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}